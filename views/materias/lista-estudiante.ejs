<%-include ../layouts/header.ejs %>
    <div class="container mx-auto">
        <%if (listado.length>0) { %>
            <br/> 
            <h2 class="text-center">Lista de estudiantes inscritos </h2>
            <br/>
            <h3 class="text-center"><b><%= materia.titulo %> - <%= materia.codigo %></b></h3>
            <br/>
                
            <div class="row align-items-center">
                <div class="col-md-10 mx-auto">
                    <table class=" table table-bordered border-primary table-light table-striped shadow rounded">
                        <thead class="thead-dark">
                            <tr >
                                <th class="bgb"><strong> NÂ° </strong></th>
                                <th class="bgb"><strong> Nombre </strong> </th>
                                <th class="bgb"><strong> Apellido </strong></th>
                                <th class="bgb"><strong> Nota Acumulada </strong></th>
                                <th class="bgb"><strong> Acciones </strong></th>
                            </tr>
                        </thead>
            
                        <tbody>
                            <% for( let i= 0; i < listado.length; i++ ) { %>
                                <tr>
                                    <td> <%=i+1%> </td>
                                    <td> <%=listado[i].nombre%> </td>
                                    <td> <%=listado[i].apellido%> </td>
                                    <td> <%= Math.round(listado[i].nota  * 100) / 100%>  </td>
                                    <td>
                                        <a href="/materias/notas-estudiante/<%=listado[i].id_matricula %>" class="btn btn-warning"> Editar</a>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        <%} else {%>
            <div class="col-md-12 mx-auto">
                <div class="card card-body text-center">
                    <p><strong>No hay alumnos inscritos a la materia</strong></p>
                    <a href="/profile" class="btn btn-danger">volver</a>
                </div>
            </div>
        <%}%>
    </div>
<%- include ../layouts/footer.ejs %>
