<%- include ../layouts/header.ejs %>
<div class="container p-3 ">  
    <div class="row align-items-center">
        <div class="col-md-4 mx-auto">
                <div class="card shadow p-3 mb-4 bg-body rounded">
                    <div class="card-body">
                        <form action="/materias/editar/<%=materia.codigo %>" method="POST">

                            <div class="mb-3">
                            <label for="formGroupExampleInput" class="form-label">Nombre de la Materia</label>
                            <input type="text" class="form-control" name="titulo" value="<%=materia.titulo %>" placeholder="Ingrese Nombre.">
                            </div>

                            <div class="mb-3">
                            <label for="formGroupExampleInput" class="form-label">AÃ±o Academico</label>
                            <select class="form-control" name="academico">
                                <% if (materia.academico == 'Cuarto' ) { %>
                                    <option value="Cuarto" selected>Cuarto</option>
                                <% } else { %>
                                    <option value="Cuarto">Cuarto</option> 
                                <% } %>
                                <% if (materia.academico == 'Quinto' ) { %>
                                    <option value="Quinto" selected>Quinto</option>
                                <% } else { %>
                                    <option value="Quinto">Quinto</option>
                                <% } %>
                            </select> 
                            </div>

                            <div class="mb-3">
                            <label for="formGroupExampleInput2" class="form-label">Describe la Materia</label>
                            <textarea name="descripcion" class="form-control" rows="2" placeholder="Describa la Materia."><%=materia.descripcion %></textarea>
                            </div>

                            <div class="form-group">
                            <button class="btn btn-outline-danger position-center "> Cancelar </button>
                            <button class="btn btn-success position-center "> Guardar </button>
                            </div>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>
<%- include ../layouts/footer.ejs %>